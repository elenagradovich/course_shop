<H1>{{{title}}}</H1>
<form method="post" action="/add">
  <div class="input-field col s6">
    <input name="title" placeholder="title" id="title" type="text" class="validate" required>
    <label for="title">Course name</label>
    <span class="helper-text" data-error="add title"></span>
  </div>
  <div class="input-field col s6">
    <input name="description" placeholder="description" id="description" type="text" class="validate" required>
    <label for="description">Description</label>
    <span class="helper-text" data-error="add description"></span>
  </div>
  <div class="input-field col s6">
    <input name="price" placeholder="price" id="price" type="number" class="validate" required min="1">
    <label for="price">Price</label>
    <span class="helper-text" data-error="add price"></span>
  </div>
  <div class="input-field col s6">
    <input name="image_url" placeholder="image" id="image" type="text" class="validate" required>
    <label for="image">URL картинки</label>
    <span class="helper-text" data-error="add image url"></span>
  </div>
  <button class="btn btn-primary" type="submit">+ Add course</button>
</form>
